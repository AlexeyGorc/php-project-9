{% extends "layouts/app.twig" %}

{% block flash %}
    {% if flash|length > 0 %}
        {% for flashType, flashMessages in flash %}
            <div class="alert alert-{{ flashType }}" role="alert">{{ flashMessages|join('<br>') }}</div>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block content %}
    <h1>Сайт: {{ url.getName }}</h1>
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-nowrap" data-test="url">
            <tbody>
            <tr>
                <td>ID</td>
                <td>{{ url.getId }}</td>
            </tr>
            <tr>
                <td>Имя</td>
                <td>{{ url.getName }}</td>
            </tr>
            <tr>
                <td>Дата создания</td>
                <td>{{ url.getCreatedAt }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <h2 class="mt-5 mb-3">Проверки</h2>
    <form action="{{ routeUrlCheck }}" method="POST">
        <input type="submit" class="btn btn-primary" value="Запустить проверку">
    </form>
    <table class="table table-bordered table-hove" data-test="checks">
        <tbody>
        <tr>
            <td>ID</td>
            <td>Код ответа</td>
            <td>h1</td>
            <td>title</td>
            <td>description</td>
            <td>Дата создания</td>
        </tr>
        {% if url.getAllChecks|length > 0 %}
            {% for urlCheck in url.getAllChecks %}
            <tr>
                <td>{{ urlCheck.getId }}</td>
                <td>{{ urlCheck.getStatusCode }}</td>
                <td>{{ urlCheck.getH1 }}</td>
                <td>{{ urlCheck.getTitle }}</td>
                <td>{{ urlCheck.getDescription}}</td>
                <td>{{ urlCheck.getCreatedAt }}</td>
            </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}